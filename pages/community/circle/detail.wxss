/* pages/community/circle/detail.wxss */
page{
  background-color: whitesmoke;
}
.bg{
  padding-left: 5%;
  padding-right: 5%;
  color: #353535;
  height: 250rpx;
  background-size: contain;
  background-position-x: center;
  background-position-y: center;
  background-repeat: no-repeat;
}
.name{
  margin-top: 20rpx;
  font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
  color: #353535;
  font-size: 50rpx;
  font-weight: bold;
}
.category{
  font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
  font-size: 32rpx;
}
.description{
  font-size: 35rpx;
  font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
  color: #888888;
}
.writeNew{
  position: absolute;
  top: 20rpx;
  right: 10rpx;
  width: 50rpx;
  height: 50rpx;
}
.post{
  width: 100%;
  height: 1000rpx;
  background-color: white;
}

.item{
  padding: 20rpx;
  margin-top: 10rpx;
  background-color: white;
}
.title{
  height: 40rpx;
  line-height: 40rpx;
  font-weight: bold;
}
.middle{
  margin-top: 10rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: row;
}
.left{
  flex: 1;
}
.user{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.right{
  width: 240rpx;
  height: 240rpx;
  border-radius: 10rpx;
}
.icon{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50rpx;
}
.username{
  margin-top: 5rpx;
  margin-bottom: 5rpx;
  margin-left: 10rpx;
  font-size: 25rpx;
  line-height: 50rpx;
  font-weight: bold;
  color: #888888;
}
.content{
  font-size: 30rpx;
  color: #888888;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
.bottom{
  display: flex;
  flex-direction: row;
  margin: auto;
}
.bottom view{
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}
.btnImg{
  width: 50rpx;
  height: 50rpx;
}
text{
  padding: 5rpx;
  font-size: 28rpx;
}
.center{
  border-top: 1rpx solid #e64340;
  text-align: center;
}