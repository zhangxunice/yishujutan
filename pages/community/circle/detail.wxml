<!--pages/community/circle/detail.wxml-->
<image src='{{icon}}' mode='aspectFill' class='bgImg'></image>
<view class='bg'>
  <view class='name'>{{name}}</view>
  <view class='category'>{{category}}</view>
  <view class='description'>{{description}}</view>
  <image class='writeNew' src='/images/community/add.png'></image>
</view>

<scroll-view scroll-y='true' scroll-with-animation='true' style='height:100vh;'>
  <view style='height:250rpx;'></view>
  <!--帖子的布局 -->
  <view class='item' wx:for='qwerty'>
    <!--标题 -->
    <view class='title'>这里是标题</view>
    <!--中间内容 -->
    <view class='middle'>
      <!--左部 -->
      <view class='left'>
        <view class='user'>
          <image src='/images/my/xiaoyan.png' class='icon'></image>
          <view class='username'>不停息的风</view>
        </view>
        <view class='content'>这里是内容</view>
      </view>
      <!--右部 -->
      <image class='right' src='/images/community/circle/ts.jpg'></image>
    </view>
    <!--底部 -->
    <view class='bottom'>
      <view>
        <image src='/images/community/forward.png' class='btnImg'></image>
        <text>497</text>
      </view>
      <view>
        <image src='/images/community/comment.png' class='btnImg'></image>
        <text>997</text>
      </view>
      <view></view>
      <view>
        <image src='/images/community/great.png' class='btnImg'></image>
        <text>7515</text>
      </view>
      <view>
        <image src='/images/community/low.png' class='btnImg'></image>
        <text>2</text>
      </view>
    </view>
  </view>
</scroll-view>