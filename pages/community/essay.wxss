/* pages/community/essay.wxss */
.main-item-t {
  padding-bottom: 16rpx;
}

.main-item-t-t {
  display: flex;
}

.main-item-t-t-l {
  width: 80rpx;
}

.headImg {
  width: 70rpx;
  height: 70rpx;
  margin: 10rpx;
  border-radius: 14rpx;
}

.main-item-t-t-2 {
  flex: auto;
  padding: 0 20rpx;
}

.userName {
  color: #0745c1;
  font-size: 34rpx;
}

.created {
  color: #999;
  font-size: 26rpx;
}
.btn{
  margin-top: 10rpx;
  margin-right: 15rpx;
  height: 60rpx;
}

.essay_content{
  padding: 20rpx;
  color: #353535;
  font-size: 35rpx;
  font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
}
.operation{
  display: flex;
  flex-direction: row;
  width: 100%;
}
.operation image{
  margin-left: 50rpx;
  margin-right: 20rpx;
  height: 50rpx;
  width: 50rpx;
}
.line{
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  padding-left: 20rpx;
  background-color: whitesmoke;
  color: #353535;
  font-size: 45rpx;
  line-height: 45rpx;
  font-weight: bold;
}

.comment{
  border-top: 1rpx solid whitesmoke;
  margin-top: 20rpx;
  width: 100%;
}
.user{
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
}
.icon{
  margin-left: 20rpx;
  margin-right: 20rpx;
  width: 48rpx;
  height: 48rpx;
  border-radius: 48rpx;
}
.nickname{
  height: 48rpx;
  line-height: 48rpx;
  color: #353535;
  font-size: 42rpx;
}
.content{
  padding-left: 108rpx;
  color: #353535;
  font-size: 35rpx;
}
.time{
  padding-top: 10rpx;
  padding-left: 108rpx;
  color: #808080;
  font-size: 30rpx;
}
.commentInputView{
  width: 100%;
  height: 80rpx;
  background-color: whitesmoke;
  padding: 4%;
  position: fixed;
  display: flex;
  justify-content: space-between;
}
.commentInput{
  width:70%;
  background-color:#fff;
  font-size:28rpx;
  border-radius:15rpx;
  display: flex;
  align-items: center;
}
 
.input{
  width:100%;
  padding: 15rpx;
  font-size: 30rpx;
  margin: 0 auto;
  overflow: hidden;
  line-height-step:20rpx;
  border: 0;
}
.send{
  width: 18%;
  height: 80rpx;
  color: #fff;
  font-size: 34rpx;
  background-color: #09bb07;
  border: 0;
}