/* pages/community/posting/posting.wxss */

.top{
  width: 100%;
  font-size: 35rpx;
  height: 50rpx;
}
.cancle{
  margin: 20rpx;
  display: inline;
  color: #9c6c6c;
} 
button::after{
  border: none;
}
.issue{
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  float: right;
  color: #f16033;
  height: 50rpx;
  border: 0rpx solid white;
  line-height: 50rpx;
  background-color: white;
}
.text{
  padding: 20rpx;
}
.title{
  padding-bottom: 10rpx; 
  font-weight: bold;
}
.content{
  color: #888888;
  font-size: 30rpx;
  height: 500rpx;
}
.bottom{
  border-top: 1rpx solid whitesmoke;
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 70rpx;
  display: flex;
  flex-direction: row;
}
.bottom view{
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}
image{
  width: 50rpx;
}