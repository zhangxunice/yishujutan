/* pages/community/friendsinfo.wxss */
page{
  background-color: whitesmoke;
}
.top{
  width: 100%;
  border-bottom: 1rpx solid whitesmoke;
  background-color: white;
}
.bg{
  position: relative;
  background-color: #95dfde;
  width: 100%;
  height: 300rpx;
}
.bigIcon{
  position: absolute;
  bottom: -90rpx;
  left: 20rpx;
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  border: 2rpx solid white;
}
.buttonLine{
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row-reverse;
  text-align: right;
  justify-content: right;
  align-items: center;
}
.follow{
  font-size: 32rpx;
  text-align: center;
  line-height: 65rpx;
  margin-right: 20rpx;
  width: 180rpx;
  height: 65rpx;
  border-radius: 30rpx;
  background-color: #1E90FF;
  color: white;
}
.addfriend{
  margin-right: 20rpx;
  width: 65rpx;
  height: 65rpx;
}
.info{
  margin-bottom: 20rpx;
  padding-left: 20rpx;
}
.name{
  font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
  color: #353535;
  font-size: 50rpx;
  font-weight: bold;
}
.category{
  font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
  font-size: 32rpx;
}
.description{
  font-size: 35rpx;
  margin-bottom: 10rpx;
  font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
  color: #888888;
}
.number{
  margin-right: 5rpx;
  color: #1E90FF;
  font-weight: bold;
  font-size: 43rpx;
}
.word{
  margin-right: 20rpx;
  font-size: 35rpx;
  color: #888888;
}

.item{
  padding: 20rpx;
  margin-top: 10rpx;
  background-color: white;
}
.title{
  height: 40rpx;
  line-height: 40rpx;
  font-weight: bold;
}
.middle{
  margin-top: 10rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: row;
}
.left{
  flex: 1;
}
.user{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.right{
  width: 240rpx;
  height: 240rpx;
  border-radius: 10rpx;
}
.icon{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50rpx;
}
.username{
  margin-left: 10rpx;
  margin-top: 5rpx;
  margin-bottom: 5rpx;
  font-size: 25rpx;
  line-height: 50rpx;
  font-weight: bold;
  color: #888888;
}
.content{
  font-size: 30rpx;
  color: #888888;
}
.bottom{
  display: flex;
  flex-direction: row;
  margin: auto;
}
.bottom view{
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}
.btnImg{
  width: 50rpx;
  height: 50rpx;
}
text{
  padding: 5rpx;
  font-size: 28rpx;
}
.essay_number{
  padding: 5rpx;
  font-size: 28rpx;
}
