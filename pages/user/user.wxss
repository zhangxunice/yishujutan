/* pages/user/user.wxss */
page{
  background-color: whitesmoke;
}
.out{
  width: 100%;
  background-color: #e64340;
  height: 470rpx;
}
.imgView{
  margin: auto;
  padding-top: 20rpx;
  text-align: center;
}
.imgView image{
  overflow: hidden;
  background-color: white;
  width: 200rpx;
  height: 200rpx;
  border: 10rpx solid white;
  border-radius: 50%; 
}
.imgView view{
  color: white;
}
.btnGroup{
  position: relative;
  top: -150rpx;
  width: 90%;
  margin: auto;
  background-color: white;
  border: 1rpx solid white;
  border-radius: 6rpx;
  box-shadow: 0 10rpx 20rpx 0 rgba(0, 0, 0, 0.2);
}
.btn{
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 1rpx solid gainsboro;
  height: 110rpx;
}
.icon{
  margin: 10rpx;
  width: 74rpx;
}
.text{
  font-size: 30rpx;
  margin-left: 1em;
  flex: 6;
  display: flex;
  align-items: center;
}