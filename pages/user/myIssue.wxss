/* pages/user/myIssue.wxss */
.tui-tabbar-content {
  padding: 8px;
}

.tui-tabbar-group {
  overflow: hidden;
  width: 100%;
  display: table;
  table-layout: fixed;
  color: #1b1b1b;
}

.tui-tabbar-cell {
  display: table-cell;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 35rpx;
  text-align: center;
}

.tui-tabbar-cell:not(:last-child) {
  border-right: 1px solid #eceaea;
}

.tui-tabbar-cell.tui-active {
  color: rgb(248, 9, 9);
}
.resource{
  background-color: #eceaea
}
.resource-title{
  padding: 10rpx
}
.title{
  font-size: 40rpx
}
.time{
  color: #777373;
  font-size: 30rpx
}
.img-plus-style {
height: 100rpx;
width: 100rpx;
position: absolute;
bottom: 150rpx;
right: 100rpx;
z-index: 100;
}
.img-style {
height: 80rpx;
width: 80rpx;
position: absolute;
bottom: 150rpx;
right: 100rpx;
opacity: 0;
}



